#!/usr/bin/env bash

has_display() {
	[[ -n "$DISPLAY" ]]
}

main() {
	if has_display; then
		ln -sf "$HOME/.vim/dark.vim" "$HOME/.vim/lightOrDark.vim"
		ln -sf ~/.config/termite/dark ~/.config/termite/config
		killall -USR1 termite
        ln -sf  /home/jeremybr/.config/i3/dark /home/jeremybr/.config/i3/config
        i3-msg restart
	fi
}

main
