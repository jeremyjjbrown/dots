    status_command i3status -c /home/jeremybr/.config/i3/i3status.conf
    tray_output primary
    position bottom
    # font pango:Hack, FontAwesome 8 # lxqt
    font pango:Hack, FontAwesome 24 # xfce
    #  font pango:Hack, FontAwesome 8 # no xfce
    tray_padding 2
    separator_symbol "  |  "
    colors {
        background #eee8d5
        statusline #073642
        separator  #586e75
        focused_workspace  #b58900 #b58900 #002b36
        active_workspace   #586e75 #586e75 #002b36
        inactive_workspace #073642 #002b36 #839496
